{
  "name": "jironimo",
  "version": "0.0.0",
  "manifest_version": 2,
  "homepage_url": "http://github.com/kkamkou/chrome-jironimo",
  "description": "Atlassian JIRA Agile in your browser. Adorable open-source extension for passionate techies and product owners.",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "views/default.html#/settings/account",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_popup": "views/default.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/vendors/angularjs/1.angular.js",
      "/vendors/stringjs/string-latest.js",
      "/vendors/lodash/lodash-latest.js",
      "/vendors/momentjs/moment-latest.js",
      "/app/lib/settings.js",
      "/app/lib/jira-api.js",
      "/app/lib/notifications.js",
      "/app/bootstrap-bg.js"
    ]
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "http://*/",
    "https://*/"
  ]
}
